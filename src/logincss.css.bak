  }

  .textbox {
width: 100%;
overflow: hidden;
font-size: 20px;
padding: 0px 0;
margin: 1px 0;
border-bottom: 2px solid orange;

  }


 .textbox i{
width: 26px;
float: left;
text-align: center;

   }


  .textbox input{
border: none;
outline: none;
background: none;
color: white;
font-size: 18px;
width: 300px;
float: left;
margin: 30px;


  }




  .btn {
width: 100%;
background: none;
border: 2px solid orange;
color: white;
padding: 7px;
font-size: 20px;
cursor: pointer;
margin 12px 0;
transition: ease-out 0.3s;
position: relative;
z-index: 1;

  }


   .btn:hover {
color: #fff;
cursor: pointer;

   }


   .btn:before {
transition: 0.5s all ease;
position: absolute;
top: 0;
left: 50%;
right: 50%;
bottom: 0;
opacity: 0;
content: "";
background-color: orange;

   }

   .btn:hover:before {
transition: 0.5s all ease;
left: 0;
right: 0;
opacity: 1;
z-index: -1;

    }




 .navbar {
    width: 85%;
    margin: auto;
    padding: 35px 0;

   }


 .navbar {
    width: 85%;
    margin: auto;
    padding: 35px 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
   }

 .logo {
    border-radius:50%;
    width: 170px;
    cursor: pointer;
   }

 .navbar ul li {
    list-style: none;
    display: inline-block;
    margin: 0 20px;
    position: relative;
   } 

 .navbar ul li a {
    text-decoration: none;
    color: #fff;
    font-family: sans-serif;
   }


 .navbar ul li::after {
    content: '';
    height: 3px;
    width: 0;
    background: #ffc107;
    position: absolute;
    left: 0;
    bottom: -10px;
    transition: 0.5s;
   }

   .navbar ul li:hover::after {
    width: 100%;
   }


  
